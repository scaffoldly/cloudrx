{
  "name": "cloudrx",
  "version": "0.1.0",
  "description": "RxJS extensions with cloud-backed subjects and observables for persistence and orchestration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --silent=false",
    "test:integration": "jest --selectProjects integration --testTimeout=30000",
    "test:integration:watch": "jest --selectProjects integration --watch --testTimeout=30000",
    "test:integration:verbose": "jest --selectProjects integration --verbose --silent=false --testTimeout=30000",
    "test:all": "npm run test:verbose && npm run test:integration:verbose"
  },
  "keywords": [
    "rxjs",
    "reactive",
    "cloud",
    "persistence",
    "observables",
    "subjects",
    "typescript"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.823.0",
    "@aws-sdk/lib-dynamodb": "^3.823.0",
    "pino": "^9.7.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.4.1",
    "glob": "^11.0.2",
    "jest": "^29.5.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.0.0",
    "testcontainers": "^11.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
          "<rootDir>/tests"
        ],
        "testMatch": [
          "**/*.test.ts"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setup/index.ts"
        ],
        "globalTeardown": "<rootDir>/tests/teardown.ts",
        "collectCoverageFrom": [
          "src/**/*.ts",
          "!src/**/*.d.ts"
        ],
        "coverageDirectory": "coverage"
      },
      {
        "displayName": "integration",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
          "<rootDir>/integration-tests"
        ],
        "testMatch": [
          "**/*.integration.test.ts"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/integration-tests/setup.ts"
        ],
        "globalTeardown": "<rootDir>/integration-tests/teardown.ts",
        "collectCoverageFrom": [
          "src/**/*.ts",
          "!src/**/*.d.ts"
        ],
        "coverageDirectory": "coverage-integration",
        "maxWorkers": 1,
        "detectOpenHandles": true
      }
    ]
  }
}
