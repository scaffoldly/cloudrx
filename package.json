{
  "name": "cloudrx",
  "version": "0.1.0",
  "description": "TypeScript library for streaming cloud provider events using RxJS with automatic persistence and replay capabilities",
  "homepage": "https://github.com/scaffoldly/cloudrx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaffoldly/cloudrx.git"
  },
  "bugs": {
    "url": "https://github.com/scaffoldly/cloudrx/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "jest": "NODE_OPTIONS='--experimental-vm-modules --trace-warnings' jest",
    "test": "npm run jest -- --testTimeout=30000"
  },
  "keywords": [
    "rxjs",
    "reactive",
    "cloud",
    "persistence",
    "observables",
    "subjects",
    "typescript"
  ],
  "author": "Scaffoldly <github.com/scaffoldly>",
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.848.0",
    "@aws-sdk/client-dynamodb-streams": "^3.848.0",
    "@aws-sdk/lib-dynamodb": "^3.850.0",
    "@aws-sdk/util-dynamodb": "^3.848.0",
    "bn.js": "^5.2.2",
    "timeflake": "^0.1.1"
  },
  "peerDependencies": {
    "rxjs": "^7.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/bn.js": "^5.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": ">=20.0.0 <21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "jest": "^29.5.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.0.0",
    "rxjs": "^7.8.2",
    "testcontainers": "^11.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "preset": "ts-jest",
        "transform": {
          "^.+\\.tsx?$": [
            "ts-jest",
            {
              "tsconfig": "tests/tsconfig.json"
            }
          ]
        },
        "moduleNameMapper": {
          "^cloudrx$": "<rootDir>/src/index.ts"
        },
        "testEnvironment": "node",
        "roots": [
          "<rootDir>/tests"
        ],
        "testMatch": [
          "**/*.test.ts"
        ],
        "globalSetup": "<rootDir>/tests/setup.ts",
        "globalTeardown": "<rootDir>/tests/teardown.ts",
        "collectCoverageFrom": [
          "src/**/*.ts",
          "!src/**/*.d.ts"
        ],
        "coverageDirectory": "coverage"
      }
    ]
  }
}
